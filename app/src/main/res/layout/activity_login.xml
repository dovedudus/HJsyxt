<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/startbg"
    tools:context="com.bs.hjsyxt.ui.activity.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="170px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:background="#B1B3B5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#FFFFFF"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#B1B3B5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_weight="2.5"
                android:text="用户名"
                android:textStyle="bold"
                android:textSize="35px"
                android:textColor="#A1B3B5"
                android:layout_marginTop="15px"
                android:layout_marginLeft="30px"/>

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#B1B3B5"/>

            <EditText
                android:id="@+id/et_loginname"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_weight="1"
                android:hint="请输入您的用户名"
                android:textColorHint="#B1B3B5"
                android:textSize="35px"
                android:layout_marginTop="20px"/>

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#B1B3B5"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:background="#B1B3B5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="20px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:background="#B1B3B5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#FFFFFF"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#B1B3B5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_weight="2.5"
                android:text="密码"
                android:textStyle="bold"
                android:textSize="35px"
                android:textColor="#A1B3B5"
                android:layout_marginTop="15px"
                android:layout_marginLeft="30px"/>

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#B1B3B5"/>

            <EditText
                android:id="@+id/et_loginpsw"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_weight="1"
                android:hint="请输入您的密码"
                android:inputType="textPassword"
                android:textColorHint="#B1B3B5"
                android:textSize="35px"
                android:layout_marginTop="20px"/>

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#B1B3B5"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:background="#B1B3B5"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="20px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:background="#B1B3B5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#FFFFFF"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#B1B3B5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_weight="2.5"
                android:text="身份"
                android:textStyle="bold"
                android:textSize="35px"
                android:textColor="#A1B3B5"
                android:layout_marginTop="15px"
                android:layout_marginLeft="30px"/>

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#B1B3B5"/>

            <Spinner
                android:id="@+id/spn_logintype"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_weight="1"
                android:textSize="35px"
                android:layout_marginTop="20px"
                android:entries="@array/spn_usertype">
            </Spinner>

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#B1B3B5"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:background="#B1B3B5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="100px">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:background="#D4E1E5"
                android:layout_marginLeft="70px"
                android:layout_marginRight="70px"
                android:text="登录"
                android:textSize="50px"
                android:textColor="#A1B3B5"
                android:gravity="center"/>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
